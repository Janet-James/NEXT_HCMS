{{#if HISTORY}}
    {{#if HISTORY.length}}
      {{#each HISTORY}}
      {{#if dayFirstMsg}}
        {{{dayFirstMsg}}}
      {{/if}}
      {{#if mid}}
   <li class='message-data' id={{mid}} data-timestamp={{ts}}>
      <img src={{avatar}} alt="">
      <div class="date-time {{type msg_type}}">
         <div class="send-name">{{uname}}</div>
         <div class="mesg-bg">{{{msg}}}</div>
         <div class="sent-editor-sec">
            <a href="#"><i class="fa fa-ellipsis-v"></i></a>
            <ul>
              <li> <a class="jumpToMsgBtn" href="#" data-rid={{rid}} data-timestamp={{ts}}>Jump to Message</a> </li>
            </ul>
         </div>
         {{#if isEdited}}
         <div class=edit-time><i class='fa fa-edit'></i><p class=user-message>{{isEdited}}</p></div>
         {{/if}}
         <div class="rec-time">{{ct}}</div>
      </div>
   </li>
   {{/if}}

   {{/each}}
   {{/if}}
   {{/if}}
